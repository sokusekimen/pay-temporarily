<% @page_title = 'リクエスト申請中' %>

<h1>フレンド<br class="uk-hidden@s">申請中一覧</h1>

<% if @users.present? %>
  <% @users.each do |user| %>
    <hr>
    <p class="uk-margin-remove-bottom"><span>email: </span><%= link_to user.email, page_path(user.id) %></p>
    <% if user.requesting?(current_user) %>
      <p class="uk-margin-remove-bottom uk-margin-small-top">
        <%=link_to "フレンド申請を削除する", page_friend_requests_path(user.id), method: :delete %></p>
    <% else %>
      <p class="uk-margin-remove-bottom uk-margin-small-top">
        <%=link_to "フレンド申請する", page_friend_requests_path(user.id), method: :post %></p>
    <% end %>
  <% end %>
<% else %>
  <hr>
  <p class="uk-text-center uk-text-meta">申請しているリクエストはありません</p>
<% end %>