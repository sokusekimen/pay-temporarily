<% @page_title = 'リクエスト一覧' %>
<h1>リクエスト一覧</h1>

<% if @users.present? %>
  <% @users.each do |user| %>
    <hr>
    <p class="uk-margin-remove-bottom"><span>name: </span><%= link_to user.username, page_path(user.id) %></p>
    <p class="uk-margin-remove-bottom uk-margin-small-top"><span>email: </span><%= link_to user.email, page_path(user.id) %></p>
    <p class="uk-margin-remove-bottom uk-margin-small-top"><%=link_to "フレンドになる", page_friendships_path(user.id), method: :post %></p>
  <% end %>
<% else %>
  <hr>
  <p class="uk-text-center uk-text-meta">フレンドリクエストはありません</p>
<% end %>