<% @page_title = '新規立て替え投稿' %>

<h1 class="uk-h1 uk-text-center"><%= @page_title %></h1>

<div class="uk-width-medium uk-padding-small uk-align-center">
  <%= form_for(@post, url: group_posts_path, html: { class: "uk-form-stacked" }) do |f| %>
    <%= render "shared/error", model: f.object %>
    <fieldset class="uk-fieldset">
      <div class="uk-margin-small">
        <%= f.text_field :title, id: :post_title, placeholder: "立て替え名", class: "uk-input uk-border-pill" %>
      </div>

      <div class="uk-margin-small">
        <%= f.text_area :description, id: :post_description, placeholder: "説明・メモ", class: "uk-textarea", rows: "4" %>
      </div>
      
      <div class="uk-margin-small">
        <%= f.text_field :total_price, id: :post_total_price, placeholder: "合計金額", class: "uk-input uk-border-pill" %>
      </div>

      <div class="uk-margin-bottom">
        <%= f.submit "作成する", class: "uk-button uk-button-primary uk-border-pill uk-width-1-1" %>
      </div>
    </fieldset>
  <% end %>
</div>