<h1>投稿編集</h1>

<%= form_for(@post, url: group_post_path) do |f| %>
  <%= f.label :title, "title" %><br>
  <%= f.text_field :title, id: :post_title %><br>
  <%= f.label :description, "説明・メモ" %><br>
  <%= f.text_area :description, id: :post_description %><br>
  <%= f.label :total_price, "合計金額" %><br>
  <%= f.text_field :total_price, id: :post_total_price %><br>

<%= f.submit "更新する" %>
<% end %>
<%= link_to '戻る', root_path %>