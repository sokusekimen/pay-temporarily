<% @page_title = 'ユーザー情報編集' %>

<h1 class="uk-h1 uk-text-center"><%= @page_title %></h1>

<div class="uk-width-large@m uk-width-medium@s uk-padding-small uk-align-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "uk-form-stacked" }) do |f| %>
  <fieldset class="uk-fieldset">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="uk-margin-small">
      <%= f.text_field :username, autocomplete: "username", autofocus: true, placeholder: "ユーザーネーム", class: "uk-input uk-border-pill" %>
    </div>

    <div class="uk-margin-small">
      <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "uk-input uk-border-pill" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>現在確認待ち: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="uk-margin-small">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "新しいパスワード", class: "uk-input uk-border-pill" %>
      <% if @minimum_password_length %>
      <em class="uk-text-small"><%= @minimum_password_length %>文字以上（変更しない場合は空白のままにしてください）</em>
      <% end %>
    </div>

    <div class="uk-margin-small">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用新しいパスワード", class: "uk-input uk-border-pill" %>
    </div>

    <div class="uk-margin-small">
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "現在のパスワード", class: "uk-input uk-border-pill" %>
    </div>

    <div class="uk-margin-small">
      <%= f.submit "更新する", class: "uk-button uk-button-primary uk-border-pill uk-width-1-1" %>
    </div>
  </fieldset>
  <% end %>
</div>

<h2 class="uk-h2 uk-text-small uk-margin-small uk-text-center uk-heading-line"><span>アカウント削除</span></h2>
<div class=" uk-padding-small uk-padding-remove-top uk-text-center">
  <%= button_to "削除する", registration_path(resource_name), data: { confirm: "アカウントを削除しますか?" }, method: :delete, class: "uk-button uk-button-danger uk-button-small uk-border-pill uk-width-1-1" %>
  <p><%= link_to "戻る", :back %></p>
</div>